<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/question1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickQuestion1Button"
        android:text="Question 1" />

    <Button
        android:id="@+id/question2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickQuestion2Button"
        android:text="Question 2" />

    <Button
        android:id="@+id/question3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickQuestion3Button"
        android:text="Question 3" />

    <Button
        android:id="@+id/question4Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickQuestion4Button"
        android:text="Question 4" />

    <Button
        android:id="@+id/question5Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickQuestion5Button"
        android:text="Question 5" />

    <TextView
        android:id="@+id/provisionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickProvisionButton"
        android:paddingBottom="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:text="管理者機能 (Do Not Touch)"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
